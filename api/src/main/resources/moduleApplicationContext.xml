<?xml version="1.0" encoding="UTF-8"?>

<!-- Beans to add to the current Application context definition -->

<beans xmlns="http://www.springframework.org/schema/beans" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
  		    http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
  		    http://www.springframework.org/schema/context
  		    http://www.springframework.org/schema/context/spring-context-3.0.xsd">

	<!-- Enable annotation-driven Spring MVC -->
	<context:component-scan base-package="org.openmrs.module.mdrtb" />

	<!-- Wraps MdrtbService methods in DB transactions and interceptors, which set audit info like dateCreated, changedBy, etc. -->

	<bean id="sessionFactory" class="org.openmrs.api.db.hibernate.HibernateSessionFactoryBean">
        <property name="configLocations">
            <list>
                <value>classpath:hibernate.cfg.xml</value>
            </list>
        </property>
    </bean>
    
    <bean parent="serviceContext">
        <property name="moduleService">
            <list>
                <value>org.openmrs.module.mdrtb.service.MdrtbService</value>
                <bean class="org.springframework.transaction.interceptor.TransactionProxyFactoryBean">
                    <property name="transactionManager">
                        <ref bean="transactionManager"/>
                    </property>
                    <property name="target">
                        <bean class="org.openmrs.module.mdrtb.service.MdrtbServiceImpl">
                        </bean>
                    </property>
                    <property name="preInterceptors">
                        <ref bean="serviceInterceptors"/>
                    </property>
                    <property name="transactionAttributeSource">
                        <bean class="org.springframework.transaction.annotation.AnnotationTransactionAttributeSource"/>
                    </property>
                </bean>
                <bean id="transactionInterceptor"
                      class="org.springframework.transaction.interceptor.TransactionInterceptor">
                    <property name="transactionManager" ref="transactionManager"/>
                    <property name="transactionAttributeSource">
                        <ref bean="transactionAttributeSource"/>
                    </property>
                </bean>
            </list>
        </property>
    </bean>
    
	<!-- Add an event listener -->
	<bean id="mdrtbEventListeners" parent="openmrsEventListeners">
		<property name="globalPropertyListeners">
			<list value-type="org.openmrs.api.GlobalPropertyListener"
				merge="true">
				<bean class="org.openmrs.module.mdrtb.CacheResetListener" />
			</list>
		</property>
	</bean>

</beans>

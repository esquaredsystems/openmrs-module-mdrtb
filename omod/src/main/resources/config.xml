	<dwr>
		<allow>
			<create creator="new" javascript="MdrtbFindPatient">
				<param name="class" value="org.openmrs.module.mdrtb.web.dwr.MdrtbFindPatient"/>
				<include method="findPatients"/>
				<include method="findPeople"/>
				<include method="findAllPeople"/>
			</create>		
		</allow>
		
		<signatures>
			<![CDATA[  ]]>
		</signatures>	
	</dwr>


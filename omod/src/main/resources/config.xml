<?xml version="1.0" encoding="UTF-8"?>
<module configVersion="1.0">
	
	<!-- Base Module Properties -->
	<id>@MODULE_ID@</id>
	<name>@MODULE_NAME@</name>
	<version>@MODULE_VERSION@</version>
	<package>@MODULE_PACKAGE@</package>
	<author>Esquared Systems</author>
	<description>MDR TB Module</description>
	
	<activator>org.openmrs.module.mdrtb.MdrtbActivator</activator>
		
	<updateURL>https://modules.openmrs.org/modules/download/@MODULE_ID@/update.rdf</updateURL>

	<require_version>2.4.0</require_version>
	
	<require_modules>
		<require_module version="${openmrs.reporting.version}">org.openmrs.module.reporting</require_module>
		<require_module version="${openmrs.wsrest.version}">org.openmrs.module.webservices.rest</require_module>
<!-- 		<require_module version="${openmrs.addresshierarchy-api.version}">org.openmrs.module.addresshierarchy</require_module> -->
	</require_modules>
	
	<aware_of_modules>
		<aware_of_module>org.openmrs.module.legacyui</aware_of_module>
	</aware_of_modules>
		
	<!-- Extensions -->
	<extension>
		<point>org.openmrs.admin.list</point>
		<class>org.openmrs.module.mdrtb.extension.html.AdminList</class>
	</extension>
	<extension>
		<point>org.openmrs.patientDashboardTab</point>
		<class>org.openmrs.module.mdrtb.extension.html.MdrtbPatientDashboardTabExt</class>
	</extension>
	<extension>
		<point>org.openmrs.gutter.tools</point>
		<class>org.openmrs.module.mdrtb.extension.html.MdrtbGutterItem</class>
	</extension>

	<!--  AOP advice points -->
	<advice>
		<point>org.openmrs.api.ConceptService</point>
		<class>org.openmrs.module.mdrtb.service.ConceptServiceAdvice</class>
	</advice>
	
	<!-- Required Privileges -->
	<privilege>
		<name>Edit DOTS-MDR Data</name>
		<description>Allows user to access/edit DOTS and MDR-TB Patient Data</description>
	</privilege>

	<!-- Global properties -->
